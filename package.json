    "web3": "^1.0.0-beta.34",
    "web3-provider-engine": "14.0.4"
  },
  "scripts": {
    "start": "HTTPS=true NODE_ENV=development react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "testnet": "./gov-testchain/deploy-gov",
    "ci": "./gov-testchain/deploy-gov --ci jest --coverage",
    "cover": "jest --coverage",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "remove-sourcemaps": "rm -rf build/static/js/*.map"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write --single-quote",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "enzyme": "^3.3.0",
    "ganache-cli": "^6.1.6",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "react-styleguidist": "^7.0.20",
    "redux-mock-store": "^1.5.3",
    "web3-fake-provider": "^0.1.0"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(png|svg|md)$": "<rootDir>/test/helpers/fileMock.js"
    },
    "setupFiles": [
      "<rootDir>/test/helpers/shimRequestAnimationFrame.js",
      "<rootDir>/test/helpers/setup.js"
    ]
  }
