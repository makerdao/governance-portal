    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(png|svg|md)$": "<rootDir>/test/helpers/fileMock.js"
    },
    "setupFiles": [
      "<rootDir>/test/helpers/shimRequestAnimationFrame.js",
      "<rootDir>/test/helpers/setup.js"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
