    "bignumber.js": "^7.2.1",
    "enzyme-adapter-react-16": "^1.1.1",
    "ethereumjs-tx": "^1.3.6",
    "ethereumjs-util": "^5.2.0",
    "hdkey": "^1.0.0",
    "jazzicon": "^1.5.0",
    "lodash.round": "^4.0.4",
    "prop-types": "^15.6.2",
    "ramda": "^0.25.0",
    "raven-js": "^3.26.4",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-ga": "^2.5.3",
    "react-markdown": "^3.3.4",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1",
